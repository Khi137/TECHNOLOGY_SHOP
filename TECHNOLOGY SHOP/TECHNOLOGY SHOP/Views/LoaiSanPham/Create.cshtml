@model TECHNOLOGY_SHOP.Models.tb_LoaiSanPham

    @{
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>THÊM MỚI</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Loại sản phẩm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    <label>Hãng sản phẩm:</label>
                    @Html.DropDownList("idHang", ViewBag.idHang as SelectList, "Chọn hãng sản phẩm", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    <label>Tên loại sản phẩm:</label>
                    @Html.EditorFor(model => model.tenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenLoaiSP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Trạng thái:</label>
                    <br />
                    
                    @Html.EditorFor(model => model.trangThai)
                    @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về danh sách", "Index")
    </div>
